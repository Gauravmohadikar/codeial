<header id="header-layout">

    <nav>
        <div class="logo">
            <p>
                <a href="/">Codeial</a>
            </p>
        </div>

        <div id="sign-nav">
        
            <ul>

                <% if(locals.user){ %>
                    <li>
                        <a href="/users/profile">
                        <%= user.name %>
                        </a>
                    </li>
                    <li>
                        <a href="/users/sign-out">SignOut</a>
                    </li>
                <%} else{ %>
                    <li>
                        <a href="/users/sign-in">SignIn</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">SignUp</a>
                    </li>
                <% } %>
                
            </ul>

        </div>

    </nav>


</header>